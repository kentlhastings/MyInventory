<Window x:Class="MyInventory.Views.Confirmation"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="{Binding DialogTitle}"
        Width="350"
        Height="125"
        WindowStartupLocation="CenterOwner"
        WindowStyle="None"
        ResizeMode="NoResize"
        Background="Transparent"
        AllowsTransparency="True">

    <Border Background="#2D2D30" CornerRadius="8" BorderBrush="#444" BorderThickness="1">
        <Grid Margin="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="30" />
                <RowDefinition Height="*" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>

            <Grid Grid.Row="0" Background="#3A3A3D" MouseDown="TitleBar_MouseDown">
                <TextBlock Text="{Binding DialogTitle}" Foreground="White"
                           FontSize="14" FontWeight="Bold"
                           VerticalAlignment="Center"
                           Margin="12,0,0,0" />
            </Grid>

            <TextBlock Grid.Row="1"
                       Text="{Binding Message}"
                       Foreground="White"
                       FontSize="14"
                       Margin="20,10,20,10"
                       TextWrapping="Wrap"
                       TextAlignment="Left"
                       VerticalAlignment="Top" />

            <StackPanel Grid.Row="2"
                        Orientation="Horizontal"
                        HorizontalAlignment="Right"
                        Margin="0,0,10,10">
                <Button Content="{Binding YesButtonText}" Width="90" Margin="5,0"
                        Background="#805ad5" Foreground="White"
                        Click="Yes_Click"/>
                <Button Content="{Binding NoButtonText}" Width="90" Margin="5,0"
                        Background="#444" Foreground="White"
                        Click="No_Click"/>
            </StackPanel>
        </Grid>
    </Border>
</Window>